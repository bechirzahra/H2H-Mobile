<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/headerLinearLay"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagefixe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/treatmentplan"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"

            />

    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:layout_toRightOf="@id/imagefixe"
        android:layout_margin="8dp"
        android:textColor="@color/ColorPrimaryBar"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txt_commentA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagefixe"
        android:layout_toEndOf="@id/date1"
        android:layout_margin="40dp"
        android:textColor="@color/ColorPrimaryBar"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    </RelativeLayout>
</LinearLayout>